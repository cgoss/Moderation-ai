# Environment Configuration Template
# Copy this file to .env.development or .env.production and fill in values

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=debug
DEBUG=true
SECRET_KEY=your-secret-key-here

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Settings
DATABASE_URL=postgresql://moderation_user:moderation_password@postgres:5432/moderation_bot
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Settings
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

# Platform API Keys
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_WEBHOOK_SECRET=your-instagram-webhook-secret

MEDIUM_CLIENT_ID=your-medium-client-id
MEDIUM_CLIENT_SECRET=your-medium-client-secret
MEDIUM_ACCESS_TOKEN=your-medium-access-token
MEDIUM_WEBHOOK_SECRET=your-medium-webhook-secret

TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TIKTOK_WEBHOOK_SECRET=your-tiktok-webhook-secret

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_FORMAT=json

# Security
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_KEY_HEADER=X-API-Key
REQUIRE_API_KEY=false

# Webhooks
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY=5

# Task Queue
TASK_QUEUE_ENABLED=true
TASK_QUEUE_CONCURRENCY=10
TASK_QUEUE_MAX_TASKS=1000

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=/app/data
MAX_UPLOAD_SIZE=10485760
